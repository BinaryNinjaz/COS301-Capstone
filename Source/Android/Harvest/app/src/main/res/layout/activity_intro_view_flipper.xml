<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/newharvestback">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/harvestintro"
                android:background="@color/black"
                android:alpha="0.7"/>

            <TextView
                style="@style/ImageTitle"
                android:text="@string/swipe_to_continue"/>

            <TextView
                style="@style/TextView.links"
                android:id="@+id/skipOne"
                android:text="@string/skip"
                android:layout_alignParentBottom="true"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:id="@+id/group"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn"
                    android:checked="true"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn2"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn3"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn4"
                    android:buttonTint="@color/white"/>
            </RadioGroup>
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/harvestmanage"
                android:background="@color/black"
                android:alpha="0.7"/>

            <TextView
                style="@style/ImageTitle"
                android:text="@string/swipe_to_continue"/>

            <TextView
                style="@style/TextView.links"
                android:id="@+id/skipTwo"
                android:text="@string/skip"
                android:layout_alignParentBottom="true"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:id="@+id/group1"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn1"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn12"
                    android:checked="true"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn13"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn14"
                    android:buttonTint="@color/white"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/harvesttrack"
                android:background="@color/black"
                android:alpha="0.7"/>

            <TextView
                style="@style/ImageTitle"
                android:text="@string/swipe_to_continue"/>

            <TextView
                style="@style/TextView.links"
                android:id="@+id/skipThree"
                android:text="@string/skip"
                android:layout_alignParentBottom="true"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:id="@+id/group2"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn20"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn22"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn33"
                    android:checked="true"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn44"
                    android:buttonTint="@color/white"/>
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/harvestanalyse"
                android:background="@color/black"
                android:alpha="0.7"/>

            <TextView
                style="@style/ImageTitle"
                android:text="@string/thatsAll"/>

            <TextView
                style="@style/TextView.links"
                android:id="@+id/done"
                android:text="@string/done"
                android:layout_alignParentBottom="true"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:id="@+id/group3"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn50"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn52"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn53"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbtn54"
                    android:checked="true"
                    android:buttonTint="@color/white"/>
            </RadioGroup>
        </RelativeLayout>

    </ViewFlipper>

    <!-- <com.chabbal.slidingdotsplash.SlidingSplashView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:imageResources="@array/img_id_arr"/> -->

</RelativeLayout>