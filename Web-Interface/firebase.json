{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
    "hosting": {
      "public": "",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "localhost:*", 
          "headers": [{
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }]
        }
      ]
    }
}
